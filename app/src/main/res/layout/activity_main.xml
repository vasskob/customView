<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue_800"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vasskob.customview.MainActivity">

    <com.example.vasskob.customview.SpeedometerView
        android:id="@+id/speedometer_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/description"
        custom:backgroundColor="@color/gray_900"
        custom:borderColor="@color/gray_100"
        custom:currentSpeed="30"
        custom:digitsColor="@color/gray_50"
        custom:innerSectorRadius="30"
        custom:maxSpeed="100"
        custom:outerSectorRadius="40"
        custom:speedArrowColor="@color/red_700"
        custom:speedArrowRadius="70"
        custom:sectorAfterSpeedArrowColor="@color/lightBlue_800"
        custom:sectorBeforeSpeedArrowColor="@color/lightBlue_300"/>

    <com.example.vasskob.customview.SpeedometerView
        android:id="@+id/speedometer_view2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/speedometer_view"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/description"
        custom:currentSpeed="40"
        custom:maxSpeed="60"
        />

    <TextView
        android:id="@+id/speed_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/speedometer_view2"
        android:textSize="40sp"
        />

    <ImageButton
        android:id="@+id/button_brake"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/brakes"
        android:contentDescription="@string/brake"
        android:text="@string/brake"/>

    <ImageButton
        android:id="@+id/button_accelerate"
        android:layout_width="50dp"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/accelerator"
        android:contentDescription="@string/accelerate"
        android:text="@string/accelerate"
        />

</RelativeLayout>
