<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vasskob.customview.MainActivity">

    <com.example.vasskob.customview.SpeedometerView
        android:id="@+id/speedometer_view"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/description"
        custom:currentSpeed="0"
        custom:maxSpeed="100"
        custom:innerSectorRadius="30"
        custom:outerSectorRadius="40"
        custom:pointerRadius="70"
        custom:backgroundColor="@color/colorBackground"
        custom:borderColor="@color/colorBorder"
        custom:pointerColor="@color/colorPointer"
        custom:digitsColor="@color/colorDigits"
        custom:sectorAfterPointerColor="@color/colorSectorAfter"
        custom:sectorBeforePointerColor="@color/colorSectorBefore"/>


    <ImageButton
        android:id="@+id/button_brake"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/brakes"
        android:text="@string/brake"/>

    <ImageButton
        android:id="@+id/button_accelerate"
        android:layout_width="50dp"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/accelerator"
        android:text="@string/accelerate"
        />

</RelativeLayout>
